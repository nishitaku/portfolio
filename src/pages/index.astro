---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-5xl font-bold">
      I'm <span class="text-primary">nishitaku</span>
    </div>
    <div class="text-3xl py-3 font-bold">a freelance software engineer.</div>

    <!-- <div class="mt-8">
      <a class="btn" href="https://twitter.com/manuelernestog" target="_blank">
        Let's connect!</a
      >
      <a
        href="https://github.com/manuelernestog/astrofy"
        target="_blank"
        class="btn btn-outline ml-5"
      >
        Get This template
      </a>
    </div> -->
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">About me</div>
  </div>

  <div class="py-2">
    <text class="text-lg">
      I'm a software engineer living in Gifu, Japan. I specialized in front-end
      web development using <b>Angular</b>.
    </text>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Bio</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement title="Born in Nara, Japan" subtitle="1986" />
    <TimeLineElement
      title="神戸大学工学部情報知能工学科"
      subtitle="2005 to 2008"
    />
    <TimeLineElement
      title="神戸大学大学院システム情報学研究科"
      subtitle="2009 to 2010"
    />
    <TimeLineElement
      title="Worked at Hitachi (日立製作所)"
      subtitle="2011 to 2016"
    />
    <TimeLineElement
      title="Working as a freelancer and move to Nagoya"
      subtitle="2016"
    />
    <TimeLineElement title="Move to Gifu" subtitle="2020" />
  </div>

