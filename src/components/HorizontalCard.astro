---
const { title, url, tags, target = '_blank', pubDate } = Astro.props;
---

<a href={url} target={target}>
  <article class="group card bg-neutral-50 px-4 py-3">
    <header>
      <time datetime={pubDate.toISOString()} class="text-xs text-gray-500"
        >{pubDate.toLocaleDateString()}</time
      >
    </header>
    <h2 class="group-hover:link">{title}</h2>
    <footer class="card-actions mt-px">
      {
        tags &&
          tags.map((tag) => (
            <div class="badge badge-ghost badge-sm">#{tag}</div>
          ))
      }
    </footer>
  </article>
</a>
