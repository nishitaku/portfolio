---
const { title, subtitle } = Astro.props;
---

<div class:list={["flex", "mb-4", Astro.props.class]}>
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span
      class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"
    ></span>
  </div>
  <div class="experience__data bd-grid px-5 collapse">
    <input type="checkbox" />
    <div class="collapse-title p-0 text-lg">
      <h3 class="font-semibold">{title}</h3>
      <span class="font-light text-sm">{subtitle}</span>
    </div>
    <div class="text-justify collapse-content">
      <slot />
    </div>
  </div>
</div>
